<h1>Article</h1>
    <% @articles.each do |article| %>
        <div class="jumbotron">
            <h4 class="display-4">
                <%= article.title %>
            </h4>
            <p class="lead">
                <%= article.body %>
            </p>

            <%= link_to "Read More", article %>
        </div>
    <% end %>
    
    <% if user_signed_in? %>
        <a class="btn btn-primary btn-lg" href="/articles/new" role="button">
            New Article
        </a>
    <% else %>
        <p style="font-weight:bold;"> 
            Please Sign in order to create a new article ! 
        </p>
    <% end %>
    

    

